<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CareWatch.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CareWatch.Mobile"
    xmlns:views="clr-namespace:CareWatch.Mobile.Views"
    >

    <TabBar>
        <Tab Title="Patients">
            <ShellContent
                ContentTemplate="{DataTemplate views:PatientsPage}"
                Icon="personalinjury.svg"
                Route="PatientsPage" />
        </Tab>
        <Tab Title="Doctors">
            <ShellContent
        ContentTemplate="{DataTemplate views:DoctorsPage}"
        Icon="doctor.svg"
        Route="DoctorsPage" />
        </Tab>
        <Tab Title="MedicalHistoriesPage">
            <ShellContent
            ContentTemplate="{DataTemplate views:MedicalHistoriesPage}"
            Route="MedicalHistoriesPage" />
        </Tab>
        <Tab Title="Emergency Request Page">
            <ShellContent
            ContentTemplate="{DataTemplate views:EmergencyRequestsPage}"
            Route="EmergencyRequestsPage" />
        </Tab>
    </TabBar>
    
</Shell>
